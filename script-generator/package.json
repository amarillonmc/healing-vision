{
  "name": "ygopro-script-generator",
  "version": "0.2.0",
  "description": "Generate ygopro Lua scripts from effect text with CLI built-in LLM support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ygo-gen": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "extract-api": "tsx src/data/extract-api.ts",
    "test": "tsx test/test-example.ts",
    "test:cli-llm": "tsx test/test-cli-llm.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "ejs": "^3.1.10"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/ejs": "^3.1.5",
    "@types/node": "^20.14.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0"
  }
}
